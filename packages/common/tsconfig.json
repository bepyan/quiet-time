{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "ES5",
    "module": "es2015",
    "lib": ["ES2015"],
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "../../node_modules", "./dist/**/*"]
}
